{
	"AWSTemplateFormatVersion" : "2010-09-09",
	"Description" : "This is for testing the policy creation",
	"Parameters" : { 
		"policyname" : {
			"Type" : "String",
			"Description" : "Give a Name to policy" 
		},
		"groupname" : {
			"Type" : "String",
			"Description" : "Put a name to group"
		}
	},
	"Resources" : {
		"CgroupName" :{
			"Type" : "AWS::IAM::Group",
			"Properties": {
				"GroupName": { "Ref" : "groupname" }
			}
		},
		"Cpolicyname" : {
			"Type" : "AWS::IAM::Policy",
			"Properties" : {
				"PolicyName" : { "Ref" : "policyname" },
				"PolicyDocument" : {
			  		"Statement": [
    					{
      						"Sid": "Stmt1504875063523",
      						"Action": "s3:*",
      						"Effect": "Allow",
      						"Resource": "*"
    					},
    					{
      						"Sid": "Stmt1504875093452",
      						"Action": [
        						"s3:DeleteBucket",
        						"s3:DeleteBucketPolicy",
        						"s3:DeleteBucketWebsite",
        						"s3:DeleteObject",
        						"s3:DeleteObjectVersion"
      						],
      						"Effect": "Deny",
      						"Resource": "*"
    					}
  					]
				},
				"Groups" : [{ "Ref" : "CgroupName" }]
			}
		}
	}
}
